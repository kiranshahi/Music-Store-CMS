@model MusicStore.Models.Genre
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<form action="/Genre/Create" method="post">
    
    @Html.LabelFor(xx => xx.GenreName)
    @Html.TextBoxFor(xx => xx.GenreName)
    <br/>

    @Html.LabelFor(xx => xx.Description)
    @Html.TextAreaFor(xx => xx.Description)
    <br/>

    <input type="submit" value="Submit">

</form>